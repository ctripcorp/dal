<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="DRTestMybatisMySQL.DRTestMapper">
    <select id="getDRTestMybatisPojo" resultType="DRTestMybatisMySQL.DRTestMybatisPojo" parameterType="int" >
        SELECT * FROM testTable WHERE ID = #{iD}
    </select>
    <select id="getCount" resultType="int">
        SELECT COUNT(*) FROM testTable
    </select>
    <select id="getHostNameMySQL" resultType="string">
        SELECT @@hostname
    </select>
    <select id="getDatabaseMySQL" resultType="string">
        SELECT database()
    </select>
    <select id="testLongQuery" resultType="string">
        select name from testTable where sleep(30) = 0 limit 1
    </select>
    <!--<select id="findForumByName" resultType="Forum" parameterType="string">
        SELECT
        forum_id  forumId,
        forum_name  forumName,
        forum_desc  forumDesc
        FROM t_forum f
        WHERE f.forum_name LIKE #{forumName}
    </select>-->
    <insert id="addDRTestMybatisPojo" parameterType="DRTestMybatisMySQL.DRTestMybatisPojo">
        INSERT INTO testTable (Name,Age)
        VALUES (#{name},#{age})
    </insert>
    <update id="updateDRTestMybatisPojo" parameterType="DRTestMybatisMySQL.DRTestMybatisPojo">
        UPDATE testTable
        SET NAME =#{name},Age=#{age}
        WHERE ID = #{iD}
    </update>
    <delete id="truncateTableMySQL" >
        truncate testTable
    </delete>

    <!--<select id="getHostNameSQLServer" resultType="string">
        select @@SERVERNAME
    </select>
    <delete id="truncateTableSQLServer" >
        truncate table testTable
    </delete>-->
</mapper>
