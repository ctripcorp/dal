<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="DRTestMybatisMySQL2.DRTestMapper2">
    <select id="getDRTestMybatisPojo2" resultType="DRTestMybatisMySQL2.DRTestMybatisPojo2" parameterType="int" >
        SELECT * FROM testTable WHERE ID = #{iD}
    </select>
    <select id="getCount2" resultType="int">
        SELECT COUNT(*) FROM testTable
    </select>
    <select id="getHostNameMySQL2" resultType="string">
        SELECT @@hostname
    </select>
    <!--<select id="findForumByName" resultType="Forum" parameterType="string">
        SELECT
        forum_id  forumId,
        forum_name  forumName,
        forum_desc  forumDesc
        FROM t_forum f
        WHERE f.forum_name LIKE #{forumName}
    </select>-->
    <insert id="addDRTestMybatisPojo2" parameterType="DRTestMybatisMySQL2.DRTestMybatisPojo2">
        INSERT INTO testTable (Name,Age)
        VALUES (#{name},#{age})
    </insert>
    <update id="updateDRTestMybatisPojo2" parameterType="DRTestMybatisMySQL2.DRTestMybatisPojo2">
        UPDATE testTable
        SET NAME =#{name},Age=#{age}
        WHERE ID = #{iD}
    </update>
    <delete id="truncateTableMySQL2" >
        truncate testTable
    </delete>

