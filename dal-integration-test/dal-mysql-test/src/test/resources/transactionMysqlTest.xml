<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation=" http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:component-scan base-package="noShardTest" />
    <context:component-scan base-package="shardTest.newVersionCode" />
    <bean id="dalAnnotationValidator" class="com.ctrip.platform.dal.dao.client.DalAnnotationValidator"/>
    <bean id="noShardTransactionTestOnMysqlDao" class="com.ctrip.platform.dal.dao.client.DalTransactionManager" factory-method="create">
        <constructor-arg name="targetClass" type="Class" value="noShardTest.NoShardTransactionTestOnMysqlDao" />
    </bean>
    <bean id="transactionWithShardOnMysqlDao" class="com.ctrip.platform.dal.dao.client.DalTransactionManager" factory-method="create">
        <constructor-arg name="targetClass" type="Class" value="shardTest.newVersionCode.TransactionWithShardOnMysqlDao" />
    </bean>
</beans>