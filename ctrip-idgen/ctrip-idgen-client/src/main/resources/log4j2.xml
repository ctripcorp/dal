<?xml version="1.0" encoding="UTF-8"?>
<configuration monitorInterval="60">
    <appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[ctrip-idgen-client][%t]%d %-5p [%c] %m%n"/>
        </Console>
        <Async name="Async" includeLocation="true">
            <AppenderRef ref="Console"/>
        </Async>
        <CatAppender name="Cat"/>
    </appenders>
    <loggers>
        <logger name="com.ctrip.platform.idgen" additivity="false" level="TRACE">
            <AppenderRef ref="Async"/>
            <AppenderRef ref="Cat"/>
        </logger>
        <root level="INFO">
            <AppenderRef ref="Async"/>
            <AppenderRef ref="Cat"/>
        </root>
    </loggers>
</configuration>
