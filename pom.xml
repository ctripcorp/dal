<?xml version="1.0" encoding="utf-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.ctrip.platform</groupId>
	<artifactId>dal-all</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<packaging>pom</packaging>
	<modules>
		<module>dal-java-client</module>
		<module>dal-das</module>
		<module>dal-console</module>
		<module>dal-ctrl</module>
		<module>dal-dao-gen</module>
		<module>dal-datasource</module>
		<module>dal-name-srv</module>
		<module>dal-common</module>
		<module>dal-tester</module>
		<module>dal-server-common</module>
		<module>dal-java-ext</module>
	</modules>
	<properties>
		<package.environment>local</package.environment>
		<spring-version>4.0.0.RELEASE</spring-version>
		<commons-net-version>3.3</commons-net-version>
		<commons-dbcp-version>1.4</commons-dbcp-version>
		<commons-lang-version>3.1</commons-lang-version>
		<commons-log-version>1.1</commons-log-version>
		<apache-http-version>4.0.1</apache-http-version>
		<apache-zk-version>3.4.5-cdh4.2.0</apache-zk-version>
		<apache-velocity-version>1.7</apache-velocity-version>
		<commons-io-version>2.4</commons-io-version>
		<slf4j-version>1.7.5</slf4j-version>
		<logback-version>1.0.11</logback-version>
		<log4j-version>1.2.17</log4j-version>
		<netty-version>4.0.4</netty-version>
		<javassist-version>3.16.1-GA</javassist-version>
		<mysql-version>5.1.25</mysql-version>
		<sqlserver-version>4.0</sqlserver-version>
		<jtds-version>1.2.8</jtds-version>
		<central-logging-version>2.1.7</central-logging-version>
		<google-pb-version>2.5.0</google-pb-version>
		<google-guice-version>4.0-beta</google-guice-version>
		<google-guava-version>14.0.1</google-guava-version>
		<reflections-version>0.9.8</reflections-version>
		<ali-druid-version>0.2.25</ali-druid-version>
		<mongo-version>2.11.3</mongo-version>
		<ws-rs-version>2.0</ws-rs-version>
		<jasig-cas-version>3.1.12</jasig-cas-version>
		<jersey-version>2.3.1</jersey-version>
		<jaxb-impl-version>2.2.7</jaxb-impl-version>
		<jackson-version>2.3.1</jackson-version>
		<jetty-servlet-version>3.0.0.v201112011016</jetty-servlet-version>
		<jetty-server-version>9.0.6.v20130930</jetty-server-version>
		<jetty-webapp-version>9.0.6.v20130930</jetty-webapp-version>
		<jetty-glassfish-version>2.2.2.v201112011158</jetty-glassfish-version>
		<jetty-javax-el-version>2.2.0.v201108011116</jetty-javax-el-version>
	</properties>
	<profiles>
		<profile>
			<id>test</id>
			<properties>
				<package.environment>test</package.environment>
			</properties>
		</profile>
		<profile>
			<id>local</id>
			<properties>
				<package.environment>local</package.environment>
			</properties>
		</profile>
	</profiles>
	<build>
		<resources>
			<resource>
				<directory>src/main/resources/${package.environment}</directory>
				<filtering>true</filtering>
			</resource>
		</resources>
		<sourceDirectory>src/main/java</sourceDirectory>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.1</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
					<encoding>UTF-8</encoding>
					<showDeprecation>true</showDeprecation>
					<showWarnings>true</showWarnings>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin</artifactId>
				<configuration>
					<encoding>${file_encoding}</encoding>
				</configuration>
			</plugin>
			<!-- <plugin> mvn compile assembly:single will produce a single jar <artifactId>maven-assembly-plugin</artifactId> 
				<configuration> <archive> <manifest> <mainClass>com.ctrip.sysdev.das.DalServer</mainClass> 
				</manifest> </archive> <descriptorRefs> <descriptorRef>jar-with-dependencies</descriptorRef> 
				</descriptorRefs> </configuration> </plugin> -->
		</plugins>
	</build>
	<distributionManagement>
		<repository>
			<uniqueVersion>false</uniqueVersion>
			<id>nexus</id>
			<url>
				http://maven.dev.sh.ctripcorp.com:8081/nexus/content/repositories/sysdevrelease/
			</url>
		</repository>
		<snapshotRepository>
			<uniqueVersion>false</uniqueVersion>
			<id>nexus</id>
			<url>
				http://maven.dev.sh.ctripcorp.com:8081/nexus/content/repositories/sysdevsnapshot/
			</url>
		</snapshotRepository>
	</distributionManagement>
</project>
