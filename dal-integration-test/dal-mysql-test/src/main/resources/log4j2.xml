<?xml version="1.0" encoding="UTF-8"?>
<configuration monitorInterval="60">
  <appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="[dal-demo][%t]%d %-5p [%c] %m%n"/>
    </Console>
    <CatAppender name="Cat" />
    <Async name="Async" includeLocation="true">
      <AppenderRef ref="Console"/>
      <AppenderRef ref="Cat"/>
    </Async>
  </appenders>
  <loggers>
    <logger name="com.ctrip.framework.dal.demo.mapper" additivity="false" level="trace">
      <AppenderRef ref="Async" level="TRACE"/>
    </logger>
    <root level="INFO">
      <AppenderRef ref="Async"/>
    </root>
  </loggers>
</configuration>
